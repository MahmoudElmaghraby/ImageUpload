<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="151dp"
                    android:layout_centerHorizontal="true"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:layout_gravity="top"
                    android:src="@drawable/wall" />

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="152dp"
                    android:layout_height="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/custome_buttons"
                    android:hint="@string/find_needed_spare_parts_here"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#4b4c4c"
                    android:textColorHint="#4b4c4c"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/srch_btn"
                    android:layout_width="51dp"
                    android:layout_height="38dp"
                    android:layout_alignTop="@+id/search_bar"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginStart="-15dp"
                    android:layout_marginTop="-3dp"
                    android:layout_toEndOf="@+id/search_bar"
                    android:layout_toRightOf="@+id/search_bar"
                    android:background="@drawable/ggg"
                    android:src="@drawable/ggg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="160dp"
                    android:text="@string/welcome_to"
                    android:textColor="#4b4c4c"
                    android:textSize="15sp"
                    app:fontFamily="@font/lato" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="177dp"
                    android:text="MR. PISTON"
                    android:textColor="#4b4c4c"
                    android:textSize="12sp"
                    app:fontFamily="@font/lato" />

                <TextView
                    android:id="@+id/thirdtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="190dp"
                    android:text="@string/now_you_can_purchase_easily"
                    android:textColor="#4b4c4c"
                    android:textSize="8sp"
                    app:fontFamily="@font/lato" />


                <Button
                    android:id="@+id/left_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@+id/thirdtext"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/middle_button"
                    android:layout_toStartOf="@+id/middle_button"
                    android:background="@drawable/lubricant" />

                <Button
                    android:id="@+id/middle_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@+id/thirdtext"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/s_p" />

                <Button
                    android:id="@+id/right_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@+id/thirdtext"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/middle_button"
                    android:layout_toRightOf="@+id/middle_button"
                    android:background="@drawable/m_b" />

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/left_button"
                    android:layout_toLeftOf="@+id/search_bar"
                    android:layout_toStartOf="@+id/search_bar"
                    android:text="@string/lubricants"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/lato" />

                <TextView
                    android:id="@+id/middel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/left_button"
                    android:layout_centerHorizontal="true"
                    android:text="@string/spare_parts"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/lato" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/left_button"
                    android:layout_toEndOf="@+id/search_bar"
                    android:layout_toRightOf="@+id/search_bar"
                    android:text="@string/maintenance"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/lato" />

                <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/middel_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-3430687372646829/9482096059"/>

                <TextView
                    android:id="@+id/About"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp"
                    android:text="@string/about"
                    android:layout_below="@+id/adView"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    app:fontFamily="@font/lato" />

                <TextView
                    android:id="@+id/kbeer"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/About"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/about_long_text"
                    android:textAlignment="center"
                    android:textColor="#4b4c4c"
                    android:textSize="15sp"
                    app:fontFamily="@font/lato" />

                <!--<include-->
                    <!--layout="@layout/activity_contact_with_us"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:layout_below="@+id/kbeer"-->
                    <!--android:layout_alignParentStart="true" />-->


                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#a4a4a4"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/kbeer"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/contact_us"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:fontFamily="@font/lato"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/face"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/facebook1" />

                        <Button
                            android:id="@+id/insta_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/instagram1" />

                        <Button
                            android:id="@+id/youtube_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/youtube1"
                            />

                        <Button
                            android:id="@+id/linkedin_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/linkedin1" />

                        <Button
                            android:id="@+id/twitter_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/tweeter1" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1b1b1b"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="ALL COPYRIGHTS FOR MR. PISTON Â® ARE RESERVED."
                        android:textColor="#4b4c4c"
                        android:textSize="12sp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="247dp"
                    android:layout_alignTop="@+id/adView"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/About"
                    android:src="@drawable/piston_stamp" />


            </RelativeLayout>
            <!-- Inflate the contents of the ScrollView dynamicaly -->



        </ScrollView>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#1b1b1b">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/header" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_pic_tab" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#1b1b1b"
                    android:text="@string/user_name"
                    android:textColor="#960202"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#1b1b1b"
                    android:text="@string/location"
                    android:textColor="#960202"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#1b1b1b"
                    android:text="@string/call_us"
                    android:textColor="#960202"
                    android:textSize="15sp" />

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>