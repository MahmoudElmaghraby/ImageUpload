<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#a4a4a4"
    android:orientation="vertical"
    tools:context=".ContactWithUs">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/contact_us"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:fontFamily="@font/lato"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/facebook1" />

        <Button
            android:id="@+id/instagram_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/instagram1" />

        <Button
            android:id="@+id/youtube_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/youtube1"
            />

        <Button
            android:id="@+id/linkedin_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/linkedin1" />

        <Button
            android:id="@+id/twitter_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/tweeter1" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b1b1b"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="ALL COPYRIGHTS FOR MR. PISTON Â® ARE RESERVED."
        android:textColor="#4b4c4c"
        android:textSize="12sp" />

</LinearLayout>